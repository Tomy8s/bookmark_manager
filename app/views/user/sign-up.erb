<h1>Register</h1>

<% if flash[:error] %>
  <%= flash[:error] %>
<% end %> 

<form acion="/sign-up" method="post">
    <label for="email">Email:
      <input type="email" name="email" placeholder="example@example.com" value="<%= @user.email %>" required autofocus>
